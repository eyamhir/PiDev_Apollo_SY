{{ form_start(form) }}
{% block stylesheets %}
    <style>
        .errormessage {
            color: red;
            font-size: 12px;
        }
    </style>
{% endblock %}
<div class="form-group row">
    <label class="col-sm-3 col-form-label">Code:</label>
    <div class="col-sm-9">
        {{ form_widget(form.code, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le code'}}) }}
        {{ form_errors(form.code, {'attr': {'class': 'errormessage'}}) }}
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-3 col-form-label">Date d'expiration:</label>
    <div class="col-sm-9">
        {{ form_widget(form.dateExpiration, {'attr': {'class': 'form-control', 'placeholder': 'SÃ©lectionnez la date d\'expiration'}}) }}
        {{ form_errors(form.dateExpiration, {'attr': {'class': 'errormessage'}}) }}
    </div>
</div>
<div class="text-center">
    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
