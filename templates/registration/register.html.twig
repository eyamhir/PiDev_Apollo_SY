{% extends 'ex.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-left mb-3">Register</h3>
                            <form method="post" novalidate>
                                {{ form_errors(registrationForm) }}
                                {{ form_row(registrationForm._token) }}

                                <div class="form-group">
                                    <label for="inputNom">Nom</label>
                                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control p_input', 'id': 'inputNom'}}) }}
                                    {% if registrationForm.nom.vars.errors|length > 0 %}
                                        <ul class="error-list">
                                            {% for error in registrationForm.nom.vars.errors %}
                                                <li class="errormessage">{{ error.message }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </div>

                                <div class="form-group">
                                    <label for="inputPrenom">Prénom</label>
                                    {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control p_input', 'id': 'inputPrenom'}}) }}
                                    {% if registrationForm.prenom.vars.errors|length > 0 %}
                                        <ul class="error-list">
                                            {% for error in registrationForm.prenom.vars.errors %}
                                                <li class="errormessage">{{ error.message }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </div>

                                <div class="form-group">
                                    <label for="inputEmail">Email</label>
                                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control p_input', 'id': 'inputEmail'}}) }}
                                    {% if registrationForm.email.vars.errors|length > 0 %}
                                        <ul class="error-list">
                                            {% for error in registrationForm.email.vars.errors %}
                                                <li class="errormessage">{{ error.message }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </div>

                                <div class="form-group">
                                    <label for="inputPassword">Mot de passe</label>
                                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control p_input', 'id': 'inputPassword'}}) }}
                                    {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                                        <ul class="error-list">
                                            {% for error in registrationForm.plainPassword.vars.errors %}
                                                <li class="errormessage">{{ error.message }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </div>

                                <div class="form-group">
                                    <label for="inputDateOfBirth">Date de naissance</label>
                                    {{ form_widget(registrationForm.date_naissance, {'attr': {'class': 'form-control', 'id': 'inputDateOfBirth'}}) }}
                                    {% if registrationForm.date_naissance.vars.errors|length > 0 %}
                                        <ul class="error-list">
                                            {% for error in registrationForm.date_naissance.vars.errors %}
                                                <li class="errormessage">{{ error.message }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </div>
                                {# Ajoutez le champ de rôle ici #}
                                <div class="form-group">
                                    <label for="inputRole">Role</label>
                                    {{ form_widget(registrationForm.role, {'attr': {'class': 'form-control', 'id': 'inputRole'}}) }}
                                    {% if registrationForm.role.vars.errors|length > 0 %}
                                        <ul class="error-list">
                                            {% for error in registrationForm.role.vars.errors %}
                                                <li class="errormessage">{{ error.message }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </div>

                                <div class="form-group d-flex align-items-center justify-content-between">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input">
                                        <label class="form-check-label">Remember me</label>
                                    </div>
                                    <a href="#" class="forgot-pass">Forgot password</a>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block enter-btn" >Register</button>
                                </div>

                                <div class="d-flex">
                                    <button class="btn btn-facebook mr-2 col">
                                        <i class="mdi mdi-facebook"></i> Facebook
                                    </button>
                                    <button class="btn btn-google col">
                                        <i class="mdi mdi-google-plus"></i> Google plus
                                    </button>
                                </div>

                                <p class="sign-up text-center">Already have an Account? <a href="{{ path('app_login') }}" > Sign In</a></p>
                                <p class="terms">By creating an account you are accepting our<a href="#"> Terms & Conditions</a></p>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- container-scroller -->
    <!-- CSS -->
    <link rel="stylesheet" href="{{ asset('assets-back/vendors/mdi/css/materialdesignicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets-back/vendors/css/vendor.bundle.base.css') }}">
    <link rel="stylesheet" href="{{ asset('assets-back/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets-back/vendors/jvectormap/jquery-jvectormap.css') }}">
    <!-- End CSS -->
    <!-- JavaScript -->
    <script src="{{ asset('assets-back/vendors/js/vendor.bundle.base.js') }}"></script>
    <script src="{{ asset('assets-back/js/off-canvas.js') }}"></script>
    <script src="{{ asset('assets-back/js/hoverable-collapse.js') }}"></script>
    <script src="{{ asset('assets-back/js/misc.js') }}"></script>
    <script src="{{ asset('assets-back/js/settings.js') }}"></script>
    <script src="{{ asset('assets-back/js/todolist.js') }}"></script>
    <!-- End JavaScript -->

{% endblock %}
