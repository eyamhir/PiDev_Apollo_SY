{% extends 'base.html.twig' %}

{% block title %}Modifier une Conversation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Ajout de Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .rounded-label {
            border-radius: 20px;
        } 
        .custom-card-title {
            text-align: center; /* Centrer le titre de la carte */
            font-family: Arial, sans-serif; /* Changer la police d'écriture */
            font-size: 24px; /* Changer la taille de la police */
            color: #333; /* Changer la couleur du texte */
            margin-bottom: 20px; /* Ajouter un espace en bas du titre */
        }
        .custom-form-group {
            margin-bottom: 20px; /* Ajouter un espace entre les éléments du formulaire */
        }
        .error-message {
            color: red;
            font-size: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h1 class="card-title custom-card-title">Modifier une Conversation</h1>
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_errors(form) }}

                        <div class="form-group custom-form-group">
                            <label for="inputSujet" class="rounded-label">Sujet</label>
                            {{ form_widget(form.Sujet, {'attr': {'class': 'form-control', 'id': 'inputSujet'}}) }}
                            {{ form_errors(form.Sujet) }}
                        </div>

                        <div class="form-group custom-form-group">
                            <label for="inputTitre" class="rounded-label">Titre</label>
                            {{ form_widget(form.Titre, {'attr': {'class': 'form-control', 'id': 'inputTitre'}}) }}
                            {{ form_errors(form.Titre) }}
                        </div>

                        <div class="form-group custom-form-group">
                            <label for="inputDescription" class="rounded-label">Description</label>
                            {{ form_widget(form.Description, {'attr': {'class': 'form-control', 'id': 'inputDescription'}}) }}
                            {{ form_errors(form.Description) }}
                        </div>

                        <div class="form-group custom-form-group">
                            <label for="inputVisibilite" class="rounded-label">Visibilité</label>
                            {{ form_widget(form.Visibilite, {'attr': {'class': 'form-control', 'id': 'inputVisibilite'}}) }}
                            {{ form_errors(form.Visibilite) }}
                        </div>

                    {{ form_end(form) }}

                    {# Display flash messages if any #}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger mt-3">{{ message }}</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    {{ parent() }}
    <!-- Ajout de Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}
